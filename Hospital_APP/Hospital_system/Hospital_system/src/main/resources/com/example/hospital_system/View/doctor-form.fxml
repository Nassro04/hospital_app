<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.hospital_system.Controllers.DoctorFormController"
      style="-fx-padding: 16; -fx-background-color: white;">
    <children>
        <Label text="Médecin" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <javafx.scene.layout.ColumnConstraints percentWidth="50" />
                <javafx.scene.layout.ColumnConstraints percentWidth="50" />
            </columnConstraints>

            <children>
                <Label text="Prénom:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Spécialité:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <javafx.scene.control.ComboBox fx:id="specialtyComboBox" maxWidth="Infinity" promptText="Select..." GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Téléphone:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </children>
        </GridPane>

        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
            <Button fx:id="manageScheduleBtn" text="Gérer le Planning" onAction="#manageSchedule"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
            <Button text="Annuler" onAction="#annuler" />
            <Button text="Enregistrer" onAction="#enregistrer"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        </HBox>
    </children>
</VBox>