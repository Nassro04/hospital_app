<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.hospital_system.Controllers.DoctorScheduleFormController"
      style="-fx-padding: 20; -fx-background-color: white;" prefWidth="700" prefHeight="500">

    <children>
        <Label text="Gestion du Planning" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <!-- Form Section -->
        <VBox spacing="10" style="-fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 15; -fx-background-color: #f9f9f9;">
            <Label text="Ajouter/Modifier un horaire" style="-fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="75" />
                </columnConstraints>

                <Label text="Jour:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <ComboBox fx:id="dayOfWeekCombo" GridPane.columnIndex="1" GridPane.rowIndex="0"
                          maxWidth="Infinity" promptText="Sélectionner un jour"/>

                <Label text="Heure de début:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="startTimeField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                           promptText="Ex: 09:00"/>

                <Label text="Heure de fin:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="endTimeField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                           promptText="Ex: 17:00"/>

                <Label text="Disponibilité:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <CheckBox fx:id="availableCheckBox" text="Disponible" GridPane.columnIndex="1"
                          GridPane.rowIndex="3"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Vider" onAction="#clearForm" 
                        style="-fx-background-color: #e0e0e0; -fx-text-fill: black; -fx-cursor: hand;"/>
                <Button text="Ajouter" onAction="#addSchedule"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-cursor: hand;"/>
                <Button text="Modifier" onAction="#updateSchedule"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-cursor: hand;"/>
                <Button text="Supprimer" onAction="#deleteSchedule"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-cursor: hand;"/>
            </HBox>
        </VBox>

        <!-- Table Section -->
        <VBox VBox.vgrow="ALWAYS" spacing="5">
            <Label text="Horaires existants" style="-fx-font-weight: bold;"/>
            <TableView fx:id="scheduleTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="dayColumn" text="Jour" prefWidth="150"/>
                    <TableColumn fx:id="startTimeColumn" text="Heure de début" prefWidth="150"/>
                    <TableColumn fx:id="endTimeColumn" text="Heure de fin" prefWidth="150"/>
                    <TableColumn fx:id="availableColumn" text="Disponibilité" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>

        <!-- Close Button -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Fermer" onAction="#close" prefWidth="100" 
                    style="-fx-background-color: #e0e0e0; -fx-text-fill: black; -fx-cursor: hand;"/>
        </HBox>
    </children>
</VBox>