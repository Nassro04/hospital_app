                <!-- Logout -->
                <Button fx:id="btnLogout" maxWidth="Infinity" onAction="#onLogoutClick" style="-fx-background-color: rgba(0,0,0,0.2); -fx-text-fill: white; -fx-padding: 15; -fx-font-weight: bold;" text="DECONNEXION" />
            </children>
        </VBox>
    </left>

    <center>
        <BorderPane>
